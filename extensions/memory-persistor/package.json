{
  "name": "@persistorai/memory-persistor",
  "version": "0.1.0",
  "private": true,
  "description": "Unified memory search across workspace files and Persistor knowledge graph",
  "type": "module",
  "scripts": {
    "lint": "eslint *.ts",
    "lint:fix": "eslint *.ts --fix",
    "format": "prettier --write \"*.ts\"",
    "format:check": "prettier --check \"*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "npx tsx index.test.ts",
    "quality": "npm run type-check && npm run lint && npm run format:check"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.7.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.18.0",
    "tsx": "^4.0.0"
  },
  "peerDependencies": {
    "openclaw": ">=2026.1.26"
  },
  "openclaw": {
    "extensions": ["./index.ts"]
  }
}
